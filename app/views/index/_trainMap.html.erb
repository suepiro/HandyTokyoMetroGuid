<% spaceCount = 6%>
<% wroteStationNumber = 0 %>
<ul style="list-style:none">
	<% stations.each do |station| %>
		<% shouldSpaceInsertNumber = spaceCount - station.name.length%>
		<% for num in 1..shouldSpaceInsertNumber do %>
			<% station.name = station.name + "　" %>
		<% end %>
		<li class="station"><%=station.name%><div class = "circle"></div></li>
		<% if wroteStationNumber != stations.length - 1%>
			<li class = "right"></li>
		<% end %>
		<% wroteStationNumber = wroteStationNumber + 1 %>
	<% end %>
</ul>
